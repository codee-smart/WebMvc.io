@model Clothings.Models.HomePageVM

<div class="border rounded border-success" style="margin : 20px 0px 20px 0px;background-color:antiquewhite;">
    <div class="text-end">
        <form asp-action="Index" method="get">

            <div class="row m-2">
                <div class="col-md-6 col-lg-8 col-sm-12">
                    <h3 class="text-center font-weight-bold" style="color:darkred;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Welcome To Foodiee</h3>
                </div>
                <div class="col-md-6 col-lg-4 col-sm-12">
                    <div class="d-flex justify-content-end">

                        <input asp-for="searchByName" placeholder="Search by name" class="form-control rounded-left" />
                        <button type="submit" class="btn btn bg-primary  text-white font-weight-bold"> <i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>

            <a asp-action="Index" class="btn btn-sm text-light" style="background-color:cornflowerblue;">Back to Full List</a>
            
        </form>
    </div>
</div>


<div class="row">
    <div class="border rounded col-2 border-success d-none d-sm-block" style="background-color:antiquewhite;">
        <p class="text-success"><strong>Search by Categories</strong></p>
        <hr />
        @if(Model.Categories.Count() > 0)
        {
            <div>
                @foreach(var item in Model.Categories)
                {
                    <div class="pb-2">
                        <strong><a asp-action="Index" asp-route-searchByCategory="@item.Name" class="text-success"><i class="fa fa-hand-point-right fa-lg" style="color:#22511f;">&nbsp</i>@item.Name</a></strong>
                    </div>
                }
            </div>
        }
        <hr />
        <p class="text-success"><strong>Our Special</strong></p>
        <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/products/cheese ball.jpg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/products/Desert1.jpg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item">
                    <img src="~/products/Paneer cutlet.jpg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <hr />
        <p class="text-success"><strong>Fav Deserts</strong></p>
        <div id="carouselExampleDark1" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleDark1" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleDark1" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleDark1" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active" data-bs-interval="10000">
                    <img src="~/products/Desert1.jpg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item" data-bs-interval="2000">
                    <img src="~/products/Desert2.jpeg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
                <div class="carousel-item">
                    <img src="~/products/Desert3.jpg" class="d-block w-100" alt="..." style="width:100px;height:200px; max-width:100%; ">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark1" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark1" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    <div class="col-10">
        <div class="border rounded border-success" style="background-color:gainsboro">
            @if (Model.ProductList.Count() > 0)
            {
                <div class="row d-flex justify-content-center">
                    @foreach(var item in Model.ProductList)
                    {
                        <div class="col-lg-auto col-md-auto mg-1 py-2 col-sm-auto">
                            <div class="card single-item" style="border-bottom:1px solid gray;height:270px;width:250px;
                                        box-shadow:0 2px 4px 0 blue, 0 6px 20px 0 rgba(0,0,0,0.19);">
                                <div class="img-container">
                                    <a asp-action="Detils" asp-route-id="@item.Id">
                                        <img src="~/products/@item.ImageFileName" class="card-img-top rounded"
                                            style="width:250px;height:250px;max-width:100%;" />
                                    </a>
                                    <h3>
                                        <span class="store-item-icon">
                                            $@item.Price
                                        </span>
                                    </h3>
                                </div>
                                <div class="card-body bg-light">
                                    <div class="row card-text text-capitalize">
                                        <div class="col-lg-10 col-md-9 col-sm-6">
                                            <p class="text-success" id="store-item-name"><strong>@item.Name</strong></p>
                                        </div>

                                        <div class="col-lg-1 col-md-3 col-sm-6 text-end">
                                            <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@item.Id"><i class="fas fa-solid fa-plus"></i></a><strong id="store-item-price" class="font-weight-bold"></strong>
                                        </div>
                                    </div>
                                </div>
                                </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
